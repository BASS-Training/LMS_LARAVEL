# ===========================================
# BASIC APPLICATION SETTINGS
# ===========================================
APP_NAME="LMS Laravel"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Locale settings untuk Indonesia
APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=laravel
DB_PASSWORD=

# ===========================================
# SESSION & CACHE (untuk LMS multi-user)
# ===========================================
SESSION_DRIVER=database
SESSION_LIFETIME=1440
SESSION_ENCRYPT=false
SESSION_EXPIRE_ON_CLOSE=false
SESSION_SECURE_COOKIE=false

CACHE_STORE=database
QUEUE_CONNECTION=database

# ===========================================
# REAL-TIME FEATURES (Laravel Reverb)
# ===========================================
BROADCAST_CONNECTION=reverb

# Laravel Reverb Configuration untuk fitur real-time
REVERB_APP_ID=lms-app-local
REVERB_APP_KEY=lms-key-local
REVERB_APP_SECRET=lms-secret-local
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http

# Vite Configuration untuk Frontend
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# ===========================================
# EMAIL CONFIGURATION (untuk notifikasi LMS)
# ===========================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@lms.local"
MAIL_FROM_NAME="${APP_NAME}"

# ===========================================
# FILE STORAGE (untuk upload materi)
# ===========================================
FILESYSTEM_DISK=local

# ===========================================
# OPTIONAL: REDIS (untuk performance)
# ===========================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Vite app name
VITE_APP_NAME="${APP_NAME}"
